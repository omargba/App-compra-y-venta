<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="12dp">

    <!-- BotÃ³n regresar -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="6dp"
        android:src="@drawable/ic_back"
        android:background="@drawable/bg_circle_white"
        android:elevation="4dp"
        android:layout_margin="8dp" />

    <!-- Tarjeta principal -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnBack"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:elevation="6dp"
        android:padding="10dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerImagenes"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="10dp"/>

            <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                android:id="@+id/dotsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_below="@id/viewPagerImagenes" />



            <!-- Contenido -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvTitulo"
                    android:text="TÃ­tulo del anuncio"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvPrecio"
                    android:text="$00.00"
                    android:textColor="#2E7D32"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvCategoria"
                    android:text="CategorÃ­a"
                    android:textColor="#616161"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvEstado"
                    android:text="Disponible"
                    android:textStyle="bold"
                    android:textColor="#1565C0"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvDescripcion"
                    android:text="DescripciÃ³n del artÃ­culo"
                    android:layout_marginTop="10dp"
                    android:textColor="#424242"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- CONTADOR DE VISITAS -->
    <TextView
        android:id="@+id/tvVisitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ‘ï¸ 0 visitas"
        android:textColor="#555"
        android:textSize="15sp"
        android:layout_below="@id/cardData"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp" />

    <!-- BOTONES -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp">

        <Button
            android:id="@+id/btnVendido"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Marcar Vendido"
            android:textAllCaps="false"
            android:backgroundTint="#2E7D32"
            android:textColor="#FFF"
            android:layout_marginRight="6dp" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Eliminar"
            android:textAllCaps="false"
            android:backgroundTint="#C62828"
            android:textColor="#FFF"
            android:layout_marginLeft="6dp" />

    </LinearLayout>

</RelativeLayout>
